{
  "name": "vite-tsconfig-aliases",
  "version": "0.1.0",
  "description": "Vite plugin that reads compilerOptions.paths from tsconfig.json and injects them as aliases into Vite resolve.alias config",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc --module commonjs && mv dist/index.js dist/index.cjs && tsc",
    "clean": "rm -rf ./node_modules ./dist ./pnpm-lock.yaml ./package-lock.json",
    "prepare": "npm run build"
  },
  "repository": "dra11y/vite-tsconfig-aliases",
  "files": [
    "dist"
  ],
  "keywords": [
    "vite",
    "vite-plugin"
  ],
  "author": "Tom Grushka",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dra11y/vite-tsconfig-aliases/issues"
  },
  "homepage": "https://github.com/dra11y/vite-tsconfig-aliases#readme",
  "dependencies": {
    "jsonc-parser": "^3.3.1"
  },
  "peerDependencies": {
    "vite": ">=5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "typescript": "^5.6.3"
  }
}
